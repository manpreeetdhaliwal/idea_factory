<%= form_with model:@idea, local: true do |form| %>
    <% if @idea.errors.present? %>
    <%= @idea.errors.full_messages.join(', ')%>
    <% end %>
    <div>
        <%= form.label :title  %> 
        <%= form.text_field :title  %> 
    </div>
    <div>
        <%= form.label :description  %>
        <%= form.text_area :description, cols:50 ,rows:5  %>  
    </div>
    <%=form.submit %> 
    
    <% end %>