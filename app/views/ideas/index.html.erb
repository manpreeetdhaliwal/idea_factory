
<% @ideas.each do |idea|%>
    <div class="container p-3 my-3 border">
        <div>
            
            <h3><%= link_to idea.title, idea_path(idea), style: 'color:black; text-decoration: none'%></h3>
            <p><%= idea.description %></p>
        </div>
        
        
        <div class="row">
            <div class="col-md-11">
            
                 <p style= 'color:blue; text-decoration: underline'>By <%= idea.user.full_name %> </p>
                 <% if @like.present? %>
                 <%= link_to '<button type="button" class="btn btn-outline-success">Liked</button>'.html_safe, like_path(@like),method: :delete  %> 
                 <% else %>  
                 <%= link_to '<button type="button" class="btn btn-outline-info">Like</button>'.html_safe, idea_likes_path(idea), method: :post  %> 
                 <% end %> 
            
            </div>
       
            <div class="col-md-1">
                <small>Likes: <%= idea.likes.count %> </small>
            </div>
           
        </div>  
    </div>
    <hr style="height:5px;background-color:#000000; border-color:transparent" />
<% end %>
</div>
